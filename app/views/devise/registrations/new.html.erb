<div class="container my-3 w-50" >
  <h2 class="text-center mb-4">サインアップ</h2>

  <div class="mt-2 mb-4 px-5 py-3 rounded shadow bg-white">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mb-3" }) do |f| %>

      <% if @company.errors.any? %>
      <% end %>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-100" %>
        <% if @company.errors.include?(:name) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:name).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :address %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %>
        <% if @company.errors.include?(:address) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:address).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        <% if @company.errors.include?(:email) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:email).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :flower_shop_id %><br />
        <%= f.collection_select(
          :flower_shop_id, FlowerShop.all, :id, :name,
          {prompt: "選択してください"},
          {class: "w-100 py-1"})
        %>
        <% if @company.errors.include?(:flower_shop_id) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:flower_shop_id).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
        <% if @company.errors.include?(:password) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
        <% if @company.errors.include?(:password_confirmation) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
      </div>

      <div class="actions text-center">
        <%= f.submit "サインアップ", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
