<div class="container my-3 w-50" >
  <h2 class="text-center mb-4">会社情報の編集</h2>

  <div class="mt-2 mb-4 px-5 py-3 rounded shadow bg-white">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "mb-3" }) do |f| %>
      <% if @company.errors.any? %>
      <% end %>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        <% if @company.errors.include?(:email) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:email).first %>
        <% end %>
 
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :address %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", class: "w-100" %>
        <% if @company.errors.include?(:address) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:address).first %>
        <% end %>
 
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :flower_shop_id %><br />
        <%= f.collection_select(
          :flower_shop_id, FlowerShop.all, :id, :name,
          {prompt: "選択してください"},
          {class: "w-100 py-1"})
        %>
        <% if @company.errors.include?(:flower_shop_id) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:flower_shop_id).first %>
        <% end %>
 
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>確認中: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password %> <i>(変更しない場合は、空白のままにしてください。)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
        <% if @company.errors.include?(:password) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:password).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
        <% if @company.errors.include?(:password_confirmation) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:password_confirmation).first %>
        <% end %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :current_password %> <i class="text-danger">(必須)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "w-100" %>
        <% if @company.errors.include?(:current_password) %>
          <p style="color: red;"><%= @company.errors.full_messages_for(:current_password).first %>
        <% end %>
 
      </div>

      <div class="actions text-center">
        <%= f.submit "編集", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <div class="actions text-center mt-5">
      <h3>アカウントを削除しますか?</h3>
      <%= button_to "削除", registration_path(resource_name), data: { confirm: "本当に削除して良いですか?", turbo_confirm: "本当に削除して良いですか??" }, method: :delete, class: "btn btn-danger px-5 mt-2" %>
    </div>

    <%= link_to "戻る", :back %>
  </div>
</div>
