<div class="container my-3 w-50" >
  <h2 class="text-center mb-4">パスワードを忘れましたか?</h2>

  <div class="mt-2 mb-4 px-5 py-3 rounded shadow bg-white">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mb-3" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "パスワードの再設定方法を送信", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>