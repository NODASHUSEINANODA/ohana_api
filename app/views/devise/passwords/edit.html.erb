<div class="container my-3 w-50" >
  <h2 class="text-center mb-4">パスワードを変更する</h2>

  <div class="mt-2 mb-4 px-5 py-3 rounded shadow bg-white">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mb-3" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password, "新しいパスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="col-12 mt-2 mb-4">
        <%= f.label :password_confirmation, "新しいパスワード（確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "パスワードを変更", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>