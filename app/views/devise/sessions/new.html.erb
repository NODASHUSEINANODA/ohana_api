<div class="container my-3 w-50" >
  <h2 class="text-center mb-4">ログイン</h2>

  <div class="mt-2 mb-4 px-5 py-3 rounded shadow bg-white">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-3" }) do |f| %>
      <div class="col-12 mt-2 mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>
      <div class="col-12 mt-2 mb-4">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "w-100" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-2 mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions text-center">
        <%= f.submit "ログイン", class: "btn btn-primary px-5" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>