<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <%# model: Employee とすることでStrongParameterが効くようになる %>
      <%= form_with(model: Employee, method: :delete, remote: true) do |form| %>
        <div class="modal-header">
          <%# jsで〇〇さんの箇所を上書き %>
          <h5 class="modal-title m-auto" id="deleteModalLabel">〇〇さんを削除しますか？</h5>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
          <%= form.submit "削除", class: "btn btn-primary px-5" %>
        </div>
      <% end %>
    </div>
  </div>
</div>